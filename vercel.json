{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/schoolImages/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/schoolImages/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
